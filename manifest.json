{
    "name": "Game Pass Checker extension",
    "description": "An extension to check the status of a Steam game on Xbox Game Pass",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "48": "src/assets/xboxicon.png"
    },
    "browser_action": {
        "browser_style": true
    },
    "permissions": [
        "tabs",
        "identity",
        "notifications",
        "*://docs.google.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://store.steampowered.com/app/*"
            ],
            "js": [
                "src/js/gamePassExt.js",
                "src/js/CSVParser.js",
                "src/js/searchFuncs.js",
                "src/js/insertData.js"
            ],
            "css": [
                "src/assets/gamePassExt.css"
            ]
        }
    ]
}